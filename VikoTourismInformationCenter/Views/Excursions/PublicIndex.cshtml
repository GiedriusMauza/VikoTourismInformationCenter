@model IEnumerable<VikoTourismInformationCenter.Models.Excursions>

@{
    ViewData["Title"] = "Excursions";
}

<h1>Excursions</h1>
<div class="row row-cols-1 row-cols-md-2 g-4">

    @foreach (var item in Model)
    {

        <div class="col">
            <div class="card">
                <img src="https://cdn3.onlithuania.com/content/uploads/2020/04/Collage_Fotor-2-12-scaled.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text">Price: @Html.DisplayFor(modelItem => item.Price)€</p>
                    <a asp-action="PublicDetails" asp-route-id="@item.Id">More Inforamtion</a>
                </div>
            </div>
        </div>

    }
</div>



