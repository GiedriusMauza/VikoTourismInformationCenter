@model VikoTourismInformationCenter.Models.Places

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Places</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="ApplicationUser" class="control-label">Contact Person</label>
                <select asp-for="ApplicationUser" class="form-control" asp-items="ViewBag.Contacts"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Category" class="control-label">Category</label>
                <select asp-for="Category" class="form-control" asp-items="ViewBag.Categories"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Id" class="control-label">Address</label>
                <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
